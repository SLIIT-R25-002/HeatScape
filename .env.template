# HeatScape Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Service URLs (for inter-service communication)
IMAGE_PROCESSING_SERVICE_URL=http://image-processing-service:5000
VLM_SOLUTION_SERVICE_URL=http://vlm-solution-service:5000
IOT_LOCALIZATION_SERVICE_URL=http://iot-localization-service:5000
UHI_SIMULATION_SERVICE_URL=http://uhi-simulation-service:4200

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://username:password@localhost:5432/heatscape

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=0
NODE_ENV=production

# GPU Support (set to true if you have NVIDIA GPU and want GPU acceleration)
ENABLE_GPU=false

# Resource Limits
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes
MAX_CONCURRENT_REQUESTS=10

# Logging
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security (generate strong secrets for production)
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
